<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/redstrip"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".ResultAcitivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="░▒ RESULT ▒░"

        android:background="#3B5679"
        android:textColor="@color/white"
        android:textSize="52sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_trophy"
        android:layout_width="289dp"
        android:layout_height="239dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/welldone"
        android:contentDescription="image"

        />

    <TextView
        android:id="@+id/tv_congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#C32D62"
        android:text="Congratulations!"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Username"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/design_default_color_primary"
        android:textSize="29sp"
        android:text="Your Score is 9 out of 10"
        />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/purple_500"
        android:text="FINISH"
        android:textColor="#E6E7E8"
        android:textSize="30sp"
        android:textStyle="bold" />


</LinearLayout>